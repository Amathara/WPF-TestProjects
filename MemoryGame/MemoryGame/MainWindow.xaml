<Window x:Class="MemoryGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoryGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#1C3662">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="123"></ColumnDefinition>
            <ColumnDefinition Width="Auto" MinWidth="120"></ColumnDefinition>
            <ColumnDefinition Width="Auto" MinWidth="123"></ColumnDefinition>
            <ColumnDefinition Width="Auto" MinWidth="121"></ColumnDefinition>
            <ColumnDefinition Width="Auto" MinWidth="129"></ColumnDefinition>
            <ColumnDefinition Width="Auto" MinWidth="224"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Background="#C4C386" Grid.ColumnSpan="6" Margin="0,0,40,0">
            <TextBox Width="100"/>
        </Label>
        <Label Grid.Row="0" Grid.Column="1" Background="#C4C386" Grid.ColumnSpan="6" Margin="0,0,40,0" >
            <Button Content="Begin!"/>
        </Label>
        
        <Label Grid.Row="0" Grid.Column="2" Background="#C4C386" Grid.ColumnSpan="6" Margin="0,0,40,0" Content="00.000.000"></Label>
        <Label Grid.Row="0" Grid.Column="5" Background="#C4C386" Grid.ColumnSpan="6" Margin="0,0,40,0" Content="HighScores" VerticalAlignment="Center"></Label>
        <Button Grid.Row="1" Grid.Column="1" Background="#8BB1BA" Content="Card1" Margin="5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button Grid.Row="1" Grid.Column="2" Background="#8BB1BA" Content="Card2" Margin="5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></Button>
        <Button Grid.Row="1" Grid.Column="3" Background="#8BB1BA" Content="Card3" Margin="5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></Button>
        <Button Grid.Row="1" Grid.Column="4" Background="#8BB1BA" Content="Card4" Margin="5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></Button>
        <Button Grid.Row="2" Grid.Column="1" Background="#8BB1BA" Content="Card5" Margin="5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></Button>
        <Button Grid.Row="2" Grid.Column="2" Background="#8BB1BA" Content="Card6" Margin="5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></Button>
        <Button Grid.Row="2" Grid.Column="3" Background="#8BB1BA" Content="Card7" Margin="5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></Button>
        <Button Grid.Row="2" Grid.Column="4" Background="#8BB1BA" Content="Card8" Margin="5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></Button>
        <Button Grid.Row="3" Grid.Column="1" Background="#8BB1BA" Content="Card9" Margin="5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></Button>
        <Button Grid.Row="3" Grid.Column="2" Background="#8BB1BA" Content="Card10" Margin="5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></Button>
        <Button Grid.Row="3" Grid.Column="3" Background="#8BB1BA" Content="Card11" Margin="5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></Button>
        <Button Grid.Row="3" Grid.Column="4" Background="#8BB1BA" Content="Card12" Margin="5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></Button>
        <Button Grid.Row="4" Grid.Column="1" Background="#8BB1BA" Content="Card13" Margin="5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></Button>
        <Button Grid.Row="4" Grid.Column="2" Background="#8BB1BA" Content="Card14" Margin="5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></Button>
        <Button Grid.Row="4" Grid.Column="3" Background="#8BB1BA" Content="Card15" Margin="5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></Button>
        <Button Grid.Row="4" Grid.Column="4" Background="#8BB1BA" Content="Card16" Margin="5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></Button>
    </Grid>
</Window>
